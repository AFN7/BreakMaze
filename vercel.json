{
    "version": 2,
    "builds": [
      {
        "src": "server/server.js",
        "use": "@vercel/node"
      },
      {
        "src": "client/**",
        "use": "@vercel/static"
      },
      {
        "src": "index.html",
        "use": "@vercel/static"
      },
      {
        "src": "style.css",
        "use": "@vercel/static"
      }
    ],
    "routes": [
      {
        "src": "/socket.io/(.*)",
        "dest": "/server/server.js"
      },
      {
        "src": "/client/(.*)",
        "dest": "/client/$1"
      },
      {
        "src": "/style.css",
        "dest": "/style.css"
      },
      {
        "src": "/^\\/$",
        "dest": "/index.html"
      },
      {
        "src": "/(.*)",
        "dest": "/server/server.js"
      }
    ]
  }